---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import CertificationCard from '../components/CertificationCard.astro';
import { getCollection } from 'astro:content';

const certifications = await getCollection('certifications');
const sortedCertifications = certifications.sort((a, b) => {
    // Ordenar por duração total em horas (assumindo formato "XXh")
    const getHours = (duration: string) => parseInt(duration.replace('h', ''));
    const totalA = getHours(a.data.duration);
    const totalB = getHours(b.data.duration);
    return totalB - totalA;
});

const totalHours = sortedCertifications.reduce((acc, cert) => {
    const hours = parseInt(cert.data.duration.replace('h', ''));
    return acc + hours;
}, 0);

const description = `Certificações e cursos em desenvolvimento de software, totalizando ${totalHours} horas de estudo em diversas tecnologias e frameworks.`;

export const prerender = true;
---

<Layout 
    title="Certificações - Gabriel Freitas Souza"
    description={description}
>
    <Navigation />
    
    <main id="main-content">
        <div
            class="page-header"
            style="contain: content; min-height: 120px;"
            transition:animate={{
                forwards: {
                    old: { name: 'fadeOut', duration: '0.3s', easing: 'ease-out' },
                    new: { name: 'fadeIn', duration: '0.3s', easing: 'ease-out' }
                },
                backwards: {
                    old: { name: 'fadeOut', duration: '0.3s', easing: 'ease-out' },
                    new: { name: 'fadeIn', duration: '0.3s', easing: 'ease-out' }
                }
            }}
        >
            <h1 transition:name="page-title">Certificações</h1>
            <p class="header-description" transition:name="page-description">
                Total de {totalHours} horas de estudo e aperfeiçoamento profissional
            </p>
        </div>

        <section
            class="certifications-grid"
            aria-label="Lista de certificações"
            style="contain: content style; content-visibility: auto; contain-intrinsic-size: 1000px;"
            data-astro-transition-scope
        >
            {sortedCertifications.map((certification) => (
                <CertificationCard certification={certification.data} />
            ))}
        </section>
    </main>
</Layout>

<style>
.page-header {
    text-align: center;
    margin-bottom: 3rem;
    contain: content;
    min-height: 120px;
}

.page-header h1 {
    font-size: clamp(1.5rem, 5vw, 2.5rem);
    margin-bottom: 0.75rem;
    background: linear-gradient(90deg, var(--accent-primary), var(--accent-secondary));
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    text-fill-color: transparent;
    line-height: 1.3;
    max-width: 90vw;
    margin-inline: auto;
    contain: paint style;
    min-height: 2em;
}

.header-description {
    color: var(--text-color);
    font-size: clamp(0.9rem, 3vw, 1.2rem);
    font-weight: 600;
    max-width: 85vw;
    margin-inline: auto;
    line-height: 1.4;
    contain: content;
    min-height: 1.4em;
}

.certifications-grid {
    display: grid;
    gap: clamp(1rem, 3vw, 2rem);
    margin-top: 3rem;
    width: 100%;
    box-sizing: border-box;
    contain: content;
    content-visibility: auto;
    contain-intrinsic-size: 1000px;
    padding: 0.1px; /* Previne margin collapse */
}

@media (max-width: 768px) {
    .page-header {
        margin-bottom: 2rem;
    }

    .page-header h1 {
        font-size: clamp(1.3rem, 4vw, 2rem);
        min-height: 1.6em;
    }

    .header-description {
        font-size: 1rem;
        min-height: 1.2em;
    }

    .certifications-grid {
        gap: 1.5rem;
        margin-top: 2rem;
    }
}

@media (max-width: 480px) {
    .page-header {
        margin-bottom: 1.5rem;
    }

    .certifications-grid {
        gap: 1rem;
        margin-top: 1.5rem;
    }
}

/* Ajustes específicos para tema claro */
:global(.light-theme) .header-description {
    color: var(--text-color);
    font-weight: 600;
}
</style>