<style>
  footer {
    width: 100%;
    background: var(--secondary-color);
    border-top: 1px solid var(--border-color);
    padding: 2rem 0;
    margin-top: 4rem;
  }

  .footer-content {
    max-width: var(--container-max-width);
    margin: 0 auto;
    padding: 0 var(--container-padding);
    display: flex;
    justify-content: space-between;
    gap: 2rem;
  }

  .footer-info {
    flex: 1;
  }

  .contact-info {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .info-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--text-color);
    font-size: 0.9rem;
    transition: color var(--transition-duration) var(--transition-timing);
  }

  a.info-item:hover {
    color: var(--primary-color);
  }

  .info-item svg {
    flex-shrink: 0;
    width: 20px;
    height: 20px;
  }

  .footer-quote {
    flex: 1;
    max-width: 400px;
  }

  blockquote {
    font-style: italic;
    color: var(--text-color-secondary);
    margin: 0;
    padding: 0;
    text-align: right;
  }

  cite {
    display: block;
    margin-top: 0.5rem;
    font-size: 0.9rem;
    font-style: normal;
    color: var(--text-color);
  }

  .footer-bottom {
    max-width: var(--container-max-width);
    margin: 2rem auto 0;
    padding: 1rem var(--container-padding) 0;
    border-top: 1px solid var(--border-color);
    text-align: center;
    font-size: 0.9rem;
    color: var(--text-color-secondary);
  }

  @media (max-width: 768px) {
    .footer-content {
      flex-direction: column;
      text-align: center;
    }

    .contact-info {
      align-items: center;
    }

    .footer-quote {
      max-width: 100%;
    }

    blockquote {
      text-align: center;
    }

    footer {
      margin-top: 2rem;
    }
  }

  @media (max-width: 480px) {
    .info-item {
      font-size: 0.8rem;
    }

    .info-item svg {
      width: 18px;
      height: 18px;
    }

    .footer-bottom {
      font-size: 0.8rem;
    }
  }
</style>