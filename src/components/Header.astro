---
import { Picture, getImage } from 'astro:assets';
import profileImage from '../assets/images/profile-280.webp';

// Preload da menor imagem para mobile
const preloadImage = await getImage({
    src: profileImage,
    width: 100,
    format: 'avif',
    quality: 90
});

// CSS crítico inline para elementos LCP
const criticalStyles = `
    .profile-image-container {
        width: var(--image-size, 140px);
        height: var(--image-size, 140px);
        border-radius: 50%;
        border: 3px solid var(--accent-tertiary);
        overflow: hidden;
        box-shadow: 0 0 20px var(--accent-tertiary);
        background: var(--secondary-color);
        contain: strict;
    }
    .title {
        font-size: clamp(1.5rem, 4vw, 3rem);
        font-weight: 700;
        background: linear-gradient(90deg, var(--accent-primary), var(--accent-secondary));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        color: var(--accent-primary); /* Fallback */
        line-height: 1.2;
        margin: 0;
        padding: 0;
        will-change: transform;
        transform: translateZ(0);
        text-align: center;
        max-width: 100%;
        overflow-wrap: break-word;
        hyphens: auto;
    }
    @media (max-width: 768px) {
        .profile-image-container { --image-size: 120px; }
    }
    @media (max-width: 480px) {
        .profile-image-container { --image-size: 100px; }
    }
`;
---

<link rel="preload" as="image" href={preloadImage.src} fetchpriority="high" />
<style set:html={criticalStyles}></style>

<header class="header" role="banner">
    <div class="header-content">
        <div class="profile">
            <div class="profile-image-container">
                <Picture
                    src={profileImage}
                    alt="Foto de perfil de Gabriel Freitas Souza"
                    formats={['avif', 'webp']}
                    widths={[100, 120, 140]}
                    sizes="(max-width: 480px) 100px, (max-width: 768px) 120px, 140px"
                    class="profile-image"
                    loading="eager"
                    fetchpriority="high"
                    quality={90}
                />
            </div>
            <h1 class="title">Gabriel Freitas Souza</h1>
            <div class="social-links" role="list">
                <a 
                    href="https://www.linkedin.com/in/gabriel-freitas-souza/" 
                    target="_blank" 
                    rel="noopener noreferrer" 
                    class="social-button linkedin"
                    aria-label="LinkedIn Profile"
                >
                    <svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
                    </svg>
                    <span>LinkedIn</span>
                </a>
                <a 
                    href="https://github.com/Gabriel-Freitas-S/" 
                    target="_blank" 
                    rel="noopener noreferrer" 
                    class="social-button github"
                    aria-label="GitHub Profile"
                >
                    <svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                    </svg>
                    <span>GitHub</span>
                </a>
            </div>
        </div>
    </div>
</header>

<style>
.header {
    padding: 8rem 0 4rem 0;
    text-align: center;
    position: relative;
    margin-bottom: 2rem;
    animation: fadeIn 0.5s ease-out;
    contain: content;
}

.header-content {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 1rem;
}

.profile {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
}

.profile-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
}

.social-links {
    display: flex;
    gap: 1rem;
    margin-top: 0.5rem;
}

.social-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.8rem 1.5rem;
    border-radius: 8px;
    transition: all 0.2s ease;
    font-weight: 500;
    font-size: 0.95rem;
    text-decoration: none;
    background: var(--accent-tertiary);
    color: var(--text-color);
}

.social-button svg {
    width: 20px;
    height: 20px;
    flex-shrink: 0;
}

.social-button.linkedin {
    background: var(--accent-primary);
    color: white;
}

.social-button.github {
    background: var(--accent-secondary);
    color: white;
}

.social-button:hover,
.social-button:focus-visible {
    transform: translateY(-2px);
}

@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(-10px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

@media (max-width: 768px) {
    .header {
        padding: 6rem 0 3rem 0;
    }

    .social-button {
        padding: 0.7rem 1.2rem;
        font-size: 0.9rem;
    }

    .social-button svg {
        width: 18px;
        height: 18px;
    }
}

@media (max-width: 480px) {
    .header {
        padding: 4rem 0 2rem 0;
    }

    .social-links {
        display: flex;
        flex-direction: row;
        justify-content: center;
        gap: 0.75rem;
        padding: 0 0.5rem;
        flex-wrap: wrap;
    }

    .social-button {
        padding: 0.8rem 1.2rem;
        font-size: 0.85rem;
        min-width: auto;
        min-height: 44px; /* Mínimo recomendado para touch targets */
        width: calc(50% - 0.75rem); /* Ocupa metade do espaço menos o gap */
        justify-content: center;
    }

    .social-button svg {
        width: 18px;
        height: 18px;
    }
}

/* Otimizações para telas muito pequenas */
@media (max-width: 360px) {
    .header {
        padding: 3rem 0 1.5rem 0;
    }

    .social-links {
        gap: 0.5rem;
    }

    .social-button {
        width: 100%; /* Em telas muito pequenas, botões ocupam largura total */
        padding: 0.8rem 1rem;
    }
}

@media (prefers-reduced-motion: reduce) {
    .header {
        animation: none;
    }

    .social-button {
        transition: none;
    }
}
</style>