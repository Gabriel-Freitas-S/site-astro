<style>
.nav-wrapper {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 1000;
}

.navigation {
    position: relative;
    transition: all 0.3s ease;
}

.navigation::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: var(--background-color);
    opacity: 0.95;
    backdrop-filter: blur(20px) saturate(180%);
    -webkit-backdrop-filter: blur(20px) saturate(180%);
    border-bottom: 1px solid var(--border-color);
    z-index: -1;
    transition: background-color 0.3s ease;
}

:global(.light-theme) .navigation::before {
    background: var(--background-color);
    opacity: 0.9;
}

.nav-wrapper.scrolled .navigation::before {
    opacity: 0.98;
}

:global(.light-theme) .nav-wrapper.scrolled .navigation::before {
    opacity: 0.98;
}

.nav-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    height: 64px;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.nav-links {
    display: flex;
    gap: 1rem;
}

.nav-actions {
    display: flex;
    gap: 1rem;
    align-items: center;
}

.nav-link {
    color: var(--text-color);
    text-decoration: none;
    font-weight: 500;
    padding: 0.5rem 1.2rem;
    border-radius: 8px;
    transition: all 0.2s ease;
    opacity: 0.8;
}

.nav-link:hover,
.nav-link:focus-visible {
    opacity: 1;
    background: var(--accent-quaternary);
    color: var(--text-color);
}

.nav-link.active {
    color: white;
    background: var(--accent-primary);
    opacity: 1;
}

.nav-icon {
    color: var(--text-color);
    transition: all 0.2s ease;
    padding: 0.5rem;
    border-radius: 8px;
    opacity: 0.8;
    display: flex;
    align-items: center;
    justify-content: center;
}

.nav-icon:hover,
.nav-icon:focus-visible {
    opacity: 1;
    background: var(--accent-secondary);
    color: white;
}

.theme-toggle {
    background: none;
    border: none;
    color: var(--text-color);
    cursor: pointer;
    padding: 0.5rem;
    border-radius: 8px;
    transition: all 0.2s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0.8;
}

.theme-toggle:hover,
.theme-toggle:focus-visible {
    opacity: 1;
    background: var(--accent-tertiary);
    color: var(--text-color);
}

.sun-icon {
    display: none;
}

.moon-icon {
    display: block;
}

:global(.light-theme) .sun-icon {
    display: block;
}

:global(.light-theme) .moon-icon {
    display: none;
}

@media (max-width: 768px) {
    .nav-container {
        padding: 0 1rem;
        height: auto;
    }

    .nav-links {
        gap: 0.25rem;
    }

    .nav-link {
        font-size: 0.85rem;
        padding: 0.4rem 0.75rem;
    }

    .nav-actions {
        gap: 0.5rem;
    }

    .nav-icon svg, 
    .theme-toggle svg {
        width: 20px;
        height: 20px;
    }
}

@media (max-width: 480px) {
    .nav-container {
        flex-direction: column;
        gap: 0.5rem;
        padding: 0.75rem;
    }

    .nav-links {
        width: 100%;
        justify-content: center;
    }

    .nav-actions {
        width: 100%;
        justify-content: center;
        padding-bottom: 0.25rem;
    }
}

@media (prefers-reduced-motion: reduce) {
    .nav-link,
    .nav-icon,
    .theme-toggle,
    .navigation {
        transition: none !important;
    }
}
</style>

<script>
const STORAGE_KEY = 'theme';
const THEME_TOGGLE_EVENT = 'theme-toggle';

function toggleTheme() {
    const root = document.documentElement;
    const isLight = root.classList.contains('light-theme');
    const newTheme = !isLight ? 'light' : 'dark';
    
    root.classList.toggle('light-theme', !isLight);
    localStorage.setItem(STORAGE_KEY, newTheme);
    
    // Dispatch custom event
    window.dispatchEvent(new CustomEvent(THEME_TOGGLE_EVENT, {
        detail: { theme: newTheme }
    }));
}

function updateThemeToggle() {
    const button = document.getElementById('theme-toggle');
    if (button) {
        const isLight = document.documentElement.classList.contains('light-theme');
        button.setAttribute('aria-label', 
            isLight ? 'Mudar para tema escuro' : 'Mudar para tema claro'
        );
    }
}

document.addEventListener('astro:page-load', () => {
    const button = document.getElementById('theme-toggle');
    if (button) {
        button.addEventListener('click', () => {
            toggleTheme();
            updateThemeToggle();
        });
    }
    updateThemeToggle();
});

document.addEventListener('astro:page-load', () => {
    const handleScroll = () => {
        const navWrapper = document.getElementById('nav-wrapper');
        if (navWrapper) {
            const isScrolled = window.scrollY > 50;
            navWrapper.classList.toggle('scrolled', isScrolled);
            navWrapper.setAttribute('aria-expanded', isScrolled.toString());
        }
    };

    document.addEventListener('scroll', handleScroll, { passive: true });
    handleScroll();
});
</script>