---
import { Icon } from 'astro-icon/components';

interface Props {
    experience: {
        company: string;
        position: string;
        period: string;
        description: string;
        technologies?: string[];
        achievements?: string[];
    };
}

const { experience } = Astro.props;

// Mapeamento de tecnologias para ícones do devicon
const getTechIcon = (tech: string): string => {
    const techMap: Record<string, string> = {
        'TypeScript/React': 'simple-icons:react',
        'Node.js': 'simple-icons:nodedotjs',
        'Android': 'simple-icons:android',
        'Expo': 'simple-icons:expo',
        'CI/CD': 'simple-icons:jenkins',
        'Git': 'simple-icons:git',
        'Testes': 'simple-icons:jest',
        'Figma': 'simple-icons:figma',
        'TypeScript': 'simple-icons:typescript',
        'JavaScript': 'simple-icons:javascript',
        'HTML': 'simple-icons:html5',
        'CSS': 'simple-icons:css3',
        'Python': 'simple-icons:python',
        'Docker': 'simple-icons:docker',
        'PostgreSQL': 'simple-icons:postgresql',
        'MongoDB': 'simple-icons:mongodb',
        'Flutter': 'simple-icons:flutter',
        'Dart': 'simple-icons:dart',
        'Rust': 'simple-icons:rust',
    };
    
    return techMap[tech] || 'mdi:code-tags';
};
---

<article class="experience-card">
    <div class="card-header">
        <div class="position-info">
            <h3>{experience.position}</h3>
            <h4>{experience.company}</h4>
        </div>
        <span class="period" aria-label={`Período: ${experience.period}`}>
            {experience.period}
        </span>
    </div>

    <p class="description">{experience.description}</p>

    {experience.technologies && (
        <div class="technologies">
            <h5>Tecnologias</h5>
            <div class="tech-list" role="list">
                {experience.technologies.map(tech => (
                    <span class="tech-tag" role="listitem">
                        <Icon name={getTechIcon(tech)} class="tech-icon" width={16} height={16} />
                        <span>{tech}</span>
                    </span>
                ))}
            </div>
        </div>
    )}

    {experience.achievements && (
        <div class="achievements">
            <h5>Principais Conquistas</h5>
            <ul role="list">
                {experience.achievements.map(achievement => (
                    <li role="listitem">{achievement}</li>
                ))}
            </ul>
        </div>
    )}
</article>

<style>
.experience-card {
    background: var(--secondary-color);
    border-radius: 12px;
    padding: 2rem;
    border: 1px solid var(--accent-tertiary);
    transition: transform 0.2s ease;
    will-change: transform;
    transform: translateZ(0);
    touch-action: manipulation;
    -webkit-tap-highlight-color: transparent;
}

.experience-card:hover,
.experience-card:active {
    box-shadow: 0 4px 12px rgba(var(--text-color-rgb), 0.1);
    transform: translateY(-2px);
}

@media (hover: hover) {
    .experience-card:hover {
        box-shadow: 0 4px 12px rgba(var(--text-color-rgb), 0.1);
        transform: translateY(-2px);
    }
}

.card-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 1.5rem;
    margin-bottom: 1.5rem;
}

.position-info h3 {
    font-size: 1.5rem;
    color: var(--accent-primary);
    margin-bottom: 0.5rem;
    line-height: 1.3;
}

.position-info h4 {
    font-size: 1.1rem;
    color: var(--accent-secondary);
    font-weight: 500;
    line-height: 1.4;
}

.period {
    background: var(--accent-tertiary);
    color: var(--text-color);
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-size: 0.9rem;
    white-space: nowrap;
    height: fit-content;
}

.description {
    color: var(--text-color);
    line-height: 1.6;
    margin-bottom: 2rem;
    opacity: 0.9;
}

.technologies, 
.achievements {
    margin-top: 2rem;
}

h5 {
    color: var(--text-color-secondary);
    font-size: 1.1rem;
    margin-bottom: 1rem;
}

.tech-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.6rem;
}

.tech-tag {
    background: var(--accent-quaternary);
    color: var(--text-color);
    padding: 0.4rem 1rem;
    border-radius: 20px;
    font-size: 0.9rem;
    line-height: 1.4;
    transition: transform 0.2s ease;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.tech-icon {
    color: var(--text-color);
    opacity: 0.9;
}

.tech-tag:hover {
    transform: translateY(-2px);
}

ul {
    list-style: none;
    padding: 0;
    margin: 0;
}

li {
    position: relative;
    padding-left: 1.5rem;
    margin-bottom: 1rem;
    color: var(--text-color);
    opacity: 0.9;
    line-height: 1.5;
}

li::before {
    content: "•";
    color: var(--accent-secondary);
    position: absolute;
    left: 0;
    top: -1px;
    font-size: 1.2em;
}

@media (max-width: 768px) {
    .experience-card {
        padding: 1.5rem;
    }

    .card-header {
        flex-direction: column;
        gap: 1rem;
    }

    .position-info h3 {
        font-size: 1.3rem;
    }

    .position-info h4 {
        font-size: 1rem;
    }

    .period {
        font-size: 0.85rem;
        padding: 0.4rem 0.8rem;
    }

    .description {
        font-size: 0.95rem;
        margin-bottom: 1.5rem;
    }

    h5 {
        font-size: 1rem;
    }

    .tech-tag {
        font-size: 0.85rem;
        padding: 0.3rem 0.8rem;
    }
}

@media (max-width: 480px) {
    .experience-card {
        padding: 1.25rem 1rem;
        margin-bottom: 1rem;
    }

    .card-header {
        gap: 1rem;
        margin-bottom: 1.25rem;
    }

    .position-info h3 {
        font-size: 1.2rem;
        line-height: 1.4;
    }

    .position-info h4 {
        font-size: 0.95rem;
        line-height: 1.3;
    }

    .description {
        font-size: 0.9rem;
        margin-bottom: 1.5rem;
        line-height: 1.5;
    }

    .tech-list {
        gap: 0.5rem;
        justify-content: flex-start;
    }

    .tech-tag {
        font-size: 0.85rem;
        padding: 0.6rem 0.8rem;
        min-height: 36px;
        border-radius: 8px;
    }

    .tech-icon {
        width: 14px;
        height: 14px;
    }

    li {
        font-size: 0.9rem;
        padding: 0.5rem;
        padding-left: 1.5rem;
        margin-bottom: 0.75rem;
        background: rgba(var(--text-color-rgb), 0.03);
        border-radius: 8px;
    }

    li::before {
        left: 0.5rem;
        top: 0.5rem;
    }

    .technologies,
    .achievements {
        margin-top: 1.5rem;
    }
}

/* Otimizações para telas muito pequenas */
@media (max-width: 360px) {
    .experience-card {
        padding: 1rem 0.75rem;
    }

    .tech-tag {
        width: 100%;
        justify-content: center;
    }

    .tech-list {
        gap: 0.4rem;
    }

    li {
        padding: 0.4rem;
        padding-left: 1.25rem;
    }

    li::before {
        left: 0.4rem;
    }
}

@media (prefers-reduced-motion: reduce) {
    .experience-card {
        transition: none;
    }
}
</style>