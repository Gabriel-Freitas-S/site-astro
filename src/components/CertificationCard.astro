---
interface Props {
    certification: {
        title: string;
        duration: string;
        courses: {
            name: string;
            period?: string;
            duration: string;
        }[];
        complementaryContent?: {
            name: string;
            duration: string;
        }[];
    };
}

const { certification } = Astro.props;
---

<div class="certification-card">
    <div class="card-header">
        <h3>{certification.title}</h3>
        <span class="duration">{certification.duration}</span>
    </div>

    <div class="content">
        <div class="courses">
            <h4>Cursos</h4>
            <ul>
                {certification.courses.map(course => (
                    <li>
                        <div class="course-info">
                            <div class="course-main">
                                <span class="name">{course.name}</span>
                                {course.period && (
                                    <span class="period">({course.period})</span>
                                )}
                            </div>
                            <span class="duration">{course.duration}</span>
                        </div>
                    </li>
                ))}
            </ul>
        </div>

        {certification.complementaryContent && (
            <div class="complementary">
                <h4>Conte√∫dos complementares</h4>
                <ul>
                    {certification.complementaryContent.map(content => (
                        <li>
                            <div class="complementary-info">
                                <span class="name">{content.name}</span>
                                <span class="duration">{content.duration}</span>
                            </div>
                        </li>
                    ))}
                </ul>
            </div>
        )}
    </div>
</div>

<style>
.certification-card {
    background: var(--secondary-color);
    border-radius: 12px;
    padding: 2rem;
    border: 1px solid var(--accent-tertiary);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.certification-card:hover {
    box-shadow: 0 0 15px var(--accent-tertiary);
    transform: translateY(-2px);
}

.card-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 1rem;
    margin-bottom: 2rem;
}

.card-header h3 {
    font-size: 1.5rem;
    color: var(--accent-primary);
    line-height: 1.3;
}

.card-header .duration {
    background: var(--accent-secondary);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-size: 0.9rem;
    white-space: nowrap;
}

.content h4 {
    color: var(--text-color-secondary);
    font-size: 1.1rem;
    margin-bottom: 1rem;
}

.courses, .complementary {
    margin-bottom: 2rem;
}

ul {
    list-style: none;
    padding: 0;
    margin: 0;
}

li {
    margin-bottom: 1rem;
}

.course-info, .complementary-info {
    display: flex;
    justify-content: space-between;
    gap: 1rem;
    color: var(--text-color);
}

.course-main {
    flex: 1;
    min-width: 0;
}

.name {
    display: block;
    color: var(--text-color);
}

.period {
    color: var(--text-color-secondary);
    font-size: 0.9rem;
    display: block;
    margin-top: 0.25rem;
}

.duration {
    color: var(--text-color-secondary);
    white-space: nowrap;
    font-size: 0.9rem;
}

@media (max-width: 768px) {
    .certification-card {
        padding: 1.5rem;
    }

    .card-header {
        flex-direction: column;
    }

    .card-header h3 {
        font-size: 1.3rem;
    }

    .card-header .duration {
        align-self: flex-start;
    }

    .course-info, .complementary-info {
        flex-direction: column;
        gap: 0.5rem;
    }

    .duration {
        align-self: flex-start;
    }

    .content h4 {
        font-size: 1rem;
    }
}

@media (max-width: 480px) {
    .certification-card {
        padding: 1rem;
    }

    .card-header h3 {
        font-size: 1.2rem;
    }

    .card-header .duration {
        padding: 0.4rem 0.8rem;
        font-size: 0.85rem;
    }

    .name {
        font-size: 0.95rem;
    }

    .period {
        font-size: 0.85rem;
    }
}
</style>